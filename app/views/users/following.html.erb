

<div class="list-group">
  <button type="button" class="list-group-item list-group-item-action active" aria-current="true">
    <%= @user.username %>'s following 
    <span class="badge badge-pill badge-secondary">
            <%= @user.leaders.count %>
          </span>
  </button>
  <% @user.leaders.each do |leader| %>
  <button type="button" class="list-group-item list-group-item-action"><%= link_to leader.username, user_path(leader.username) %></button>
  <% end %>

</div>
